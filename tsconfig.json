{
  "compilerOptions": {
    "target": "ESNext",                   
    "module": "CommonJS",                  
    "rootDir": "src",                      
    "outDir": "dist",                      
    "strict": true,                        
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                  
    "resolveJsonModule": true,             
    "noImplicitAny": true,                 
    "noImplicitReturns": true,                        
    "noFallthroughCasesInSwitch": true     
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
